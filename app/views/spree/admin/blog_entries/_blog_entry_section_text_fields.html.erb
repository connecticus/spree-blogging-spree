<div class="nested-fields">
  <%= f.hidden_field :layout, value: 'text' %>
  <%= f.hidden_field :position, value: f.object.position %>

  <div class="col-sm-12">
    <div class="form-group">
      <%= f.cktext_area :body, class: 'form-control' %>
    </div>
  </div>

  <div class="col-sm-12">
    <%= link_to_remove_association "Remove Section", f %>
    <hr>
  </div>
</div>
